<li id="stuff-<%= stuff.id %>"> <!-- adds css id for each post, opening up possibilities for manipulating indiv posts -->
  <div class="main">
    <table border="1">
      <thead>
        <tr>
          <th>分類</th>
          <th>名前</th>
          <th>名前2</th>
          <th>道具の説明</th>
          <th>道具の説明2</th>
          <th>道具の説明3</th>
          <th>責任者</th>
          <th>画像</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @stuffs.each do |stuff| %>
          <tr>
            <td><%= stuff.name %></td>
            <td><%= stuff.sub_name1 %></td>
            <td><%= stuff.sub_name2 %></td>
            <td><%= stuff.description1 %></td>
            <td><%= stuff.description2 %></td>
            <td><%= stuff.description3 %></td>
            <!-- <td><%= stuff.image %></td> -->
            <td><%= link_to 'Show', stuff %></td>
            <td><%= link_to 'Edit', edit_stuff_path(stuff) %></td>
            <td><%= link_to 'Destroy', stuff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</li>
