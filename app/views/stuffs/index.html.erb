<p id="notice"><%= notice %></p>

<h1>物品一覧</h1>

<p>選択してください</p>


<table>
  <thead>
    <tr>
      <th>分類</th>
      <th>名前</th>
      <th>名前2</th>
      <th>道具の説明</th>
      <th>道具の説明2</th>
      <th>道具の説明3</th>
      <th>責任者</th>
      <th>画像</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stuffs.each do |stuff| %>
      <tr>
        <td><%= stuff.name %></td>
        <td><%= stuff.sub_name1 %></td>
        <td><%= stuff.sub_name2 %></td>
        <td><%= stuff.description1 %></td>
        <td><%= stuff.description2 %></td>
        <td><%= stuff.description3 %></td>
        <td><%= stuff.user_id %></td>
        <td><%= stuff.image %></td>
        <td><%= link_to '情報変更', edit_stuff_path(stuff) %></td>
        <td><%= link_to '全体リストから削除', stuff, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

