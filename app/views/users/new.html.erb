    <div class="main">
      <div class="form-wrapper">
        <h1>新規登録</h1>
          <%= form_for(@user, url: signup_path) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
            <div class="form-item">
              <%#= f.label :name, "名前：" %>
              <%= f.text_field :name, placeholder: "名前" %>
            </div>
            <br>
            <div class="form-item">
              <%#= f.label :grade, "期：" %>
              <%= f.number_field :grade, placeholder: "期" %>
            </div>
            <br>
            <div class="form-item">
              <%#= f.label :email, "メールアドレス:" %>
              <%= f.email_field :email, placeholder: "メールアドレス" %>
            </div>
            <br>
            <div class="form-item">
              <%#= f.label :password, "パスワード：" %>
              <%= f.password_field :password, placeholder: "パスワード" %>
            </div>
            <br>
            <div class="form-item">
              <%#= f.label :password_confirmation, "パスワード確認： " %>
              <%= f.password_field :password_confirmation, placeholder: "パスワード確認" %>
            </div>
            <div class="button-panel">
              <%= f.submit "新規登録", class: "btn btn-primary" %>
              <%= f.submit "ログインに戻る", class: "btn btn-primary" %>
            </div>
          <% end %>
          <br>
      </div>
    </div>
