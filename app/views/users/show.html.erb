<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>ようこそ、<%= @user.name %>さん</h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.stuffs.any? %>
      <h3>Stuffs (<%= @user.stuffs.count %>)</h3>
      <ol class="stuffs">
        <%= render @stuffs %>
      </ol>
      <%= will_paginate @stuffs %>
    <% end %>
  </div>
</div>

